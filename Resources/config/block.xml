<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Breadcrumb block -->
        <parameter key="rz.seo.block.breadcrumb.homepage.class">Rz\SeoBundle\Block\Breadcrumb\HomepageBreadcrumbBlockService</parameter>
        <parameter key="rz.seo.block.facebook.share_button.class">Rz\SeoBundle\Block\Social\FacebookShareButtonBlockService</parameter>
        <parameter key="rz.seo.block.twitter.share_button.class">Rz\SeoBundle\Block\Social\TwitterShareButtonBlockService</parameter>
        <parameter key="rz.seo.block.pinterest.share_button.class">Rz\SeoBundle\Block\Social\PinterestShareButtonBlockService</parameter>
    </parameters>

    <services>
        <!-- Breadcrumb -->
        <service id="sonata.seo.block.breadcrumb.homepage" class="%sonata.seo.block.breadcrumb.homepage.class%">
            <tag name="sonata.breadcrumb"/>
            <tag name="sonata.block" />

            <argument>homepage</argument>
            <argument>sonata.seo.block.breadcrumb.homepage</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="knp_menu.menu_provider" />
            <argument type="service" id="knp_menu.factory" />
        </service>
        <!-- Breadcrumb -->

        <!-- Facebook Social Button -->
        <service id="rz.seo.block.facebook.share_button" class="%rz.seo.block.facebook.share_button.class%">
            <tag name="sonata.block" />
            <argument>rz.seo.block.facebook.share_button</argument>
            <argument type="service" id="templating" />
        </service>
        <!-- Facebook Social Button -->

        <!-- Twitter Social Button -->
        <service id="rz.seo.block.twitter.share_button" class="%rz.seo.block.twitter.share_button.class%">
            <tag name="sonata.block" />
            <argument>rz.seo.block.twitter.share_button</argument>
            <argument type="service" id="templating" />
        </service>
        <!-- Twitter Social Button -->

        <!-- Pinterest Social Button -->
        <service id="rz.seo.block.pinterest.share_button" class="%rz.seo.block.pinterest.share_button.class%">
            <tag name="sonata.block" />
            <argument>rz.seo.block.pinterest.share_button</argument>
            <argument type="service" id="templating" />
        </service>
        <!-- Pinterest Social Button -->
    </services>
</container>
